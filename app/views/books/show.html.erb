
<%= render 'layouts/list',book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>

  		<table class="table">
  		  <tbody>

  		    <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                <%= @user.name%>
              <% end %>
            </td>

           <td><%=link_to @books.title, book_path(@books.id)%></td>
           <td><%= @books.body %></td>
           <td>コメント数: <%= @book.book_comments.count %></td>
           <td>
              <% if @books.user == current_user %>
                <td><%=link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %> </td>
                <td><%= link_to "Destroy", book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
              <% end %>
           </td>
          </tr>

      </tbody>
    </table>
</div>
